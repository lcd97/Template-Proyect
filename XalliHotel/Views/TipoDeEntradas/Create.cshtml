@model XalliHotel.Models.TipoDeEntrada

@{
    ViewBag.Title = "Inventario";
}
            <!--INICIO FORMULARIO DE CREACION-->
            <div class="main-card mb-3 card">

                <!--INICIO FORMULARIO INTERNO-->
                <div class="card-body">
                    <h5 class="card-title">Tipos de Entrada</h5>
                    @using (Html.BeginForm())
                    {
                        @Html.AntiForgeryToken()
                    <!--INICIA EL PRIMER CONTAINER-->
                        <div class="form-row">
                            <div class="col-md-6 mb-3">
                                @Html.LabelFor(model => model.codTE, htmlAttributes: new { })
                                @Html.EditorFor(model => model.codTE, new { htmlAttributes = new { @class = "form-control", @placeholder = "Ingresar código", @AutoComplete = "off", @maxLength = 5, @style = "text-transform:uppercase" } })
                                @Html.ValidationMessageFor(model => model.codTE, "", new { @class = "text-danger" })
                            </div>

                            <div class="col-md-6 mb-3">
                                @Html.LabelFor(model => model.estadoTE, htmlAttributes: new { })
                                @Html.DropDownListFor(x => x.estadoTE, new List<SelectListItem>
                                {
                                    new SelectListItem() {Text = "Activo", Value="true"},
                                    new SelectListItem() {Text = "Inactivo", Value="false"},
                                }, htmlAttributes: new { @class = "form-control", @disabled = "disabled" })
                                @Html.ValidationMessageFor(model => model.estadoTE, "", new { @class = "text-danger" })

                            </div>
                        </div>
                        <div class="form-row">
                            <div class="col-md-12 mb-3">
                                @Html.LabelFor(model => model.descTE, htmlAttributes: new { })
                                @Html.EditorFor(model => model.descTE, new { htmlAttributes = new { @class = "form-control", @placeholder = "Ingresar texto", @AutoComplete = "off" } })
                                @Html.ValidationMessageFor(model => model.descTE, "", new { @class = "text-danger" })
                            </div>

                        </div>
                        <a href="@Url.Action("index", "TipoDeEntradas")" class="btn btn-primary">
                            Regresar
                        </a>
                        <input type="submit" value="Guardar" class="btn btn-primary" />
                        <!--INICIO CAMPOS INTERNOS-->
                        <!--FIN CAMPOS INTERNOS-->
                    }
                    <script>
                                    // Example starter JavaScript for disabling form submissions if there are invalid fields
                                    (function() {
                                        'use strict';
                                        window.addEventListener('load', function() {
                                            // Fetch all the forms we want to apply custom Bootstrap validation styles to
                                            var forms = document.getElementsByClassName('needs-validation');
                                            // Loop over them and prevent submission
                                            var validation = Array.prototype.filter.call(forms, function(form) {
                                                form.addEventListener('submit', function(event) {
                                                    if (form.checkValidity() === false) {
                                                        event.preventDefault();
                                                        event.stopPropagation();
                                                    }
                                                    form.classList.add('was-validated');
                                                }, false);
                                            });
                                        }, false);
                                    })();
                    </script>

                </div>
                <!--FIN FORMULARIO INTERNO-->
            </div>
            <!--FIN FORMULARIO DE CREACION-->