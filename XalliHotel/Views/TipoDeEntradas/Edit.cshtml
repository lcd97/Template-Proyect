@model XalliHotel.Models.TipoDeEntrada

@{
    ViewBag.Title = "Inventario";
}


            <!--INICIO FORMULARIO DE CREACION-->
            <div class="main-card mb-3 card">
                @using (Html.BeginForm())
                {
                    @Html.AntiForgeryToken()

                    @Html.ValidationSummary(true, "", new { @class = "text-danger" })
                    @Html.HiddenFor(model => model.Id)
                    @Html.HiddenFor(model => model.codTE)
                <!--INICIO FORMULARIO INTERNO-->
                    <div class="card-body">
                        <h5 class="card-title">Tipo de Entrada</h5>
                        <!--INICIA EL PRIMER CONTAINER-->
                        <div class="form-row">
                            <div class="col-md-6 mb-3">
                                @Html.LabelFor(model => model.codTE, htmlAttributes: new { })
                                @Html.EditorFor(model => model.codTE, new { htmlAttributes = new { @class = "form-control", @placeholder = "Ingrese aquí el código", disabled = "disabled" } })
                                @Html.ValidationMessageFor(model => model.codTE, "", new { @class = "text-danger" })
                            </div>
                            <!--FIN CONTAINER-->
                            <div class="col-md-6 mb-3">
                                @Html.LabelFor(model => model.estadoTE, htmlAttributes: new { })
                                @Html.DropDownListFor(x => x.estadoTE, new List<SelectListItem>
                                {
                                    new SelectListItem() {Text = "Activo", Value="true"},
                                    new SelectListItem() {Text = "Inactivo", Value="false"},
                                }, htmlAttributes: new { @class = "form-control" })
                                @Html.ValidationMessageFor(model => model.estadoTE, "", new { @class = "text-danger" })
                            </div>
                        </div>
                        <div class="form-row">
                            <div class="col-md-12 mb-3">
                                @Html.LabelFor(model => model.descTE, htmlAttributes: new { })
                                @Html.EditorFor(model => model.descTE, new { htmlAttributes = new { @class = "form-control", @placeholder = "Ingrese aquí el nombre de la categoría" } })
                                @Html.ValidationMessageFor(model => model.descTE, "", new { @class = "text-danger" })
                            </div>
                        </div>
                        <a href="@Url.Action("index", "TipoDeEntradas")" class="btn btn-primary">
                            Regresar
                        </a>
                        <input type="submit" value="Guardar" class="btn btn-primary" />
                        <!--INICIO CAMPOS INTERNOS-->
                        <!--FIN CAMPOS INTERNOS-->                       
                    </div>
                }
                <!--FIN FORMULARIO INTERNO-->
            </div>
            <!--FIN FORMULARIO DE CREACION-->